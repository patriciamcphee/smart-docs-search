{
  "name": "smart-search-plugin",
  "version": "0.0.3",
  "description": "Enhanced search plugin for Docusaurus v2",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src",
    "scripts"
  ],
  "scripts": {
    "clean": "node -e \"if (require('fs').existsSync('lib')) require('fs').rmSync('lib', { recursive: true })\"",
    "copy-files": "node scripts/copy-files.js",
    "build": "npm run clean && npx babel src -d lib && npm run copy-files",
    "prepare": "npm run build",
    "watch": "npx babel src -d lib --watch"
  },
  "dependencies": {
    "lunr": "^2.3.9",
    "antd": "^4.24.0",
    "lodash": "^4.17.21",
    "gray-matter": "^4.0.3",
    "@ant-design/icons": "^4.8.0"
  },
  "peerDependencies": {
    "@docusaurus/core": "^2.4.3",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.4",
    "@babel/preset-env": "^7.23.4",
    "@babel/preset-react": "^7.23.4"
  }
}